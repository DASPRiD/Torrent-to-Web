{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "exclude": ["node_modules"],
    "include": ["src/**/*"],
    "compilerOptions": {
        "lib": ["esnext", "dom"],
        "target": "ES2015",
        "outDir": "lib",
        "declaration": false,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "importsNotUsedAsValues": "error"
    }
}
