{
  "name": "torrent-to-web",
  "version": "1.4.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DASPRiD/Torrent-to-Web.git"
  },
  "bugs": {
    "url": "https://github.com/DASPRiD/Torrent-to-Web/issues"
  },
  "homepage": "https://github.com/DASPRiD/Torrent-to-Web#readme",
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@parcel/config-webextension": "^2.0.1",
    "@tsconfig/recommended": "^1.0.1",
    "eslint": "^8.10.0",
    "eslint-config-dasprid": "^0.1.8",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "parcel": "^2.0.1",
    "typescript": "^4.5.2",
    "web-ext": "^6.5.0",
    "webextension-polyfill-ts": "^0.26.0"
  },
  "scripts": {
    "start": "parcel watch src/manifest.json --host localhost --target webext-dev",
    "build": "parcel build src/manifest.json --no-source-maps --target webext-prod",
    "browser": "web-ext run -s dist/",
    "postbuild": "web-ext build -s ./dist --overwrite-dest",
    "postversion": "git push && git push --tags",
    "lint": "eslint src",
    "lint-fix": "eslint --fix src",
    "prepare": "husky install"
  },
  "targets": {
    "webext-dev": {
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      },
      "distDir": "./dist"
    },
    "webext-prod": {
      "distDir": "./dist"
    }
  },
  "dependencies": {
    "base64-arraybuffer": "^1.0.1",
    "bootstrap": "^5.1.3",
    "zod": "^3.11.6"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  }
}
